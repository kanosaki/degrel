greet(@N, @Max) -> {
  {{ noise(noise_index) }}
  original(@X) -> transoformed(plus_one(X + 1), plus_two(X + 2))

  fin if((N < Max),
    then: {
      {{ noise(noise_index) }}
      println("HELLO", N)
      fin greet((N + 1), Max)
    },
    else: {
      println("DONE", N)
    })
}

